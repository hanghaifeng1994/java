<script>
    (function (window, $) {
        var pagepostdata = utils_admin.clone(apidata.postdata);
        var pagepostdatatwo = utils_admin.clone(apidata.postdata);
        //列表1  修改查询接口
        let pagedataone = utils_admin.setajax('POST', pagepostdata, apidata.resource.rqueryManagePage);
        utils_admin.queryPage("resource", "resource_t", pagedataone);
        //分页1
        new pagination({
            pagination: $('.pagination0'),//分页挂载的样式名称
            maxPage: 5, //最大页码数,支持奇数，左右对称
            startPage: 1,    //默认第一页
            currentPage: 1,          //当前页码
            totalPageCount: (pagedataone.totalCount / pagedataone.pageSize) - (pagedataone.totalCount / pagedataone.pageSize) % 1 + 1,  //总页数
            callback: function (pageNum) {
                pagepostdata.payload.page = "" + pageNum + "";
                utils_admin.queryPage("resource", "resource_t", utils_admin.setajax('POST', pagepostdata, apidata.resource.rqueryManagePage));
            }
        });
        //栏目一
        let onecolumndata = utils_admin.setajax('POST', pagepostdata, apidata.resource.cqueryShowPage).data;
        window.utils_admin.loadhtml($(".onecolumn"), '/dropdown.html', {
            "header": "选择栏目",
            "id": null,
            "body": utils_admin.loop(onecolumndata, "catId", "catName"),
            "width": 120,
            "name": "onecolumn",
        });
        $(".onecolumn").click(function (a) {
            pagepostdata.payload.resCatstr = utils_admin.downid(a, "onecolumn");
        });

        //发布状态一
        window.utils_admin.loadhtml($(".resPubStatus"), '/dropdown.html', {
            "header": "选择状态",
            "id": null,
            "body": [{
                "text": "已发布",
                "id": "1"
            }, {
                "text": "未发布",
                "id": "0"
            }
            ],
            "width": 120,
            "name": "resPubStatus",
        });
        $(".resPubStatus").click(function (a) {
            pagepostdata.payload.resPubStatus = utils_admin.downid(a, "resPubStatus");
        });
        //审核状态一
        window.utils_admin.loadhtml($(".resStatus"), '/dropdown.html', {
            "header": "选择状态",
            "id": null,
            "body": [
                {
                    "text": "未提交",
                    "id": "0"
                },
                {
                    "text": "审核中",
                    "id": "1"
                },
                {
                    "text": "审核通过",
                    "id": "2"
                },
                {
                    "text": "审核失败",
                    "id": "3"
                },
                {
                    "text": "不需要审核  ",
                    "id": "4"
                },
            ],
            "width": 120,
            "name": "resStatus",
        });
        $(".resStatus").click(function (a) {
            pagepostdata.payload.resStatus = utils_admin.downid(a, "resStatus");
        });


        //列表 2 修改查询接口-apidata.news.queryPage
        let pagedataone2 = utils_admin.setajax('POST', pagepostdata, apidata.resource.queryMainPage);
        utils_admin.queryPage("lowerresource", "lowerresource_t", pagedataone2);
        //分页2
        new pagination({
            pagination: $('.pagination1'),//分页挂载的样式名称
            maxPage: 5, //最大页码数,支持奇数，左右对称
            startPage: 1,    //默认第一页
            currentPage: 1,          //当前页码
            totalPageCount: (pagedataone2.totalCount / pagedataone2.pageSize) - (pagedataone2.totalCount / pagedataone2.pageSize) % 1 + 1,  //总页数
            callback: function (pageNum) {
                pagepostdata.payload.page = "" + pageNum + "";
                //修改查询接口-apidata.news.queryPage
                utils_admin.queryPage("lowerresource", "lowerresource_t", utils_admin.setajax('POST', pagepostdata, apidata.resource.queryMainPage));
            }
        });
        //栏目二
        window.utils_admin.loadhtml($(".onecolumntwo"), '/dropdown.html', {
            "header": "选择栏目",
            "id": null,
            "body": utils_admin.loop(onecolumndata, "catId", "catName"),
            "width": 120,
            "name": "onecolumntwo",
        });
        $(".onecolumntwo").click(function (a) {
            pagepostdatatwo.payload.resCatstr = utils_admin.downid(a, "onecolumntwo");
        });
        //发布状态二
        window.utils_admin.loadhtml($(".resPubStatustwo"), '/dropdown.html', {
            "header": "选择状态",
            "id": null,
            "body": [
                {
                    "text": "已发布",
                    "id": "1"
                }, {
                    "text": "未发布",
                    "id": "0"
                }
            ],
            "width": 120,
            "name": "resPubStatustwo",
        });
        $(".resPubStatustwo").click(function (a) {
            pagepostdatatwo.payload.resPubStatus = utils_admin.downid(a, "resPubStatustwo");
        });
        window.utils_admin.loadhtml($(".resStatustwo"), '/dropdown.html', {
            "header": "选择状态",
            "id": null,
            "body": [
                {
                    "text": "未提交",
                    "id": "0"
                },
                {
                    "text": "审核中",
                    "id": "1"
                },
                {
                    "text": "审核通过",
                    "id": "2"
                },
                {
                    "text": "审核失败",
                    "id": "3"
                },
                {
                    "text": "不需要审核  ",
                    "id": "4"
                },
            ],
            "width": 120,
            "name": "resStatustwo",
        });
        $(".resStatustwo").click(function (a) {
            pagepostdatatwo.payload.resStatustwo = utils_admin.downid(a, "resStatustwo");
        });
        //站点,平台初始化
        window.utils_admin.loadhtml($(".parentsitelist"), '/dropdown.html', {
            "header": "所有平台",
            "id": null,
            "body": window.parentSiteList,
            "width": 120,
            "name": "parentsitelist",
        });
        window.utils_admin.loadhtml($(".endchild"), '/dropdown.html', {
            "header": "先选择平台",
            "id": null,
            "body": null,
            "width": 120,
            "name": "endchild",
        });
        //换站点
        $(".parentsitelist").click(function (a) {
            let id = '', endchild = [];
            if (a.target.nodeName.toLowerCase() == "li") {
                id = a.target.getAttribute("id")
            } else {
                id = window.parentSiteList[0].id
            }
            window.childSiteList.forEach((a) => {
                a.forEach((e, index) => {
                    if (e.ptId == id) {
                        endchild.push(e)
                        endchild[index].text = endchild[index].siteName;
                        endchild[index].id = endchild[index].siteId;
                    }
                })
            });
            window.utils_admin.loadhtml($(".endchild"), '/dropdown.html', {
                "header": endchild[0].text,
                "id": endchild[0].id,
                "body": endchild,
                "width": 120,
                "name": "endchild",
            });
        });
        $(".endchild").click(function (a) {
            pagepostdata.payload.siteId = utils_admin.downid(a, "endchild");
        });


        //搜索一
        function seek() {
            let inputdata = $("input[type=text]");
            pagepostdata.payload.resName = inputdata[0].value
            utils_admin.queryPage("resource", "resource_t", utils_admin.setajax('POST', pagepostdata, apidata.resource.rqueryManagePage));
        }

        //搜索二
        function seektwo() {
            let inputdata = $("input[type=text]");
            pagepostdata.payload.resName = inputdata[1].value;
            utils_admin.queryPage("lowerresource", "lowerresource_t", utils_admin.setajax('POST', pagepostdatatwo, apidata.resource.queryMainPage));
        }

        //发布
        function pubStatus(e) {
            var id = e.dataset.id;
            pagepostdata.payload.resId = id;
            if ($.trim($(e).text()) == "发布") {
                pagepostdata.payload.resPubStatus="1";
            } else {
                pagepostdata.payload.resPubStatus="0";
            }
            utils_admin.setajax('POST', pagepostdata, apidata.resource.rpublish);
            utils_admin.queryPage("resource", "resource_t", utils_admin.setajax('POST', pagepostdata, apidata.resource.rqueryManagePage));
        }

        //编辑
        function check(e) {
            utils_admin.redact("addresource", "resId", e)
        }
        //查看
        function loock(e) {
            localStorage.setItem("loock",e.dataset.id);
            utils_admin.redact("addresource", "resId", e)
        }
        //全选
        function selectall(thit) {
            let checkboxs = document.getElementsByName("choose");
            if (thit.checked) {
                for (let i = 0; i < checkboxs.length; i++) {
                    let e = checkboxs[i];
                    e.checked = true;
                }
            } else {
                for (let i = 0; i < checkboxs.length; i++) {
                    let e = checkboxs[i];
                    e.checked = false;
                }
            }
        }

        //删除
        function forbidden(e) {
            $("#popups").toggle("hidden");
            var id = e.dataset.id;
            pagepostdata.payload.resId = id;
        }

        //批量删除
        function deleteclass(a) {
            $("#popups").toggle("hidden");
            pagepostdata.payload.resId = utils_admin.choosevalue("resource");
        }
        $("#popups>.white_content").click(function (a) {
            if (a.target.nodeName.toLowerCase() == "button") {
                $("#popups").toggle("hidden")
            }
            if (a.target.dataset.id == "1") {
                utils_admin.setajax('POST', pagepostdata, apidata.resource.rdeleteById);
                utils_admin.queryPage("resource", "resource_t", utils_admin.setajax('POST', pagepostdata, apidata.resource.rqueryManagePage));
            }
        });


        window.seek = seek
        window.seektwo = seektwo
        window.forbidden = forbidden
        window.deleteclass = deleteclass
        window.pubStatus = pubStatus
        window.check = check
        window.selectall=selectall
        window.loock=loock
    })(window, window.$);

</script>