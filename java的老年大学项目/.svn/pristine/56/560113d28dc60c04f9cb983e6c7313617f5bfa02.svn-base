<%@ page contentType="text/html;charset=UTF-8" %>
<style type="text/css"> 
#ie6-warning{ 
float:left;
top:0; 
left:0; 
font-size:16px; 
width:95%;
padding: 2px 15px 2px 23px;
text-align:center;
} 
#ie6-warning a { 
text-decoration:none; 
}
.close_button{
background:url(../image/img/close_btn.png) no-repeat;
top:0px; 
right:0;
float:right;
cursor:pointer;
}
</style>
<script type="text/javascript">
function ie6close() {
	$("#ie6-warning").hide();
	$("#ie6button").hide();
}
</script>
