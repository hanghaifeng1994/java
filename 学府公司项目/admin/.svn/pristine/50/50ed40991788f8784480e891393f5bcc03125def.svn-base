<script>
    (function (window, $) {

        var pagepostdata = utils_admin.clone(apidata.postdata);
        window.utils_admin.calendar($('.datepicker'));
        //数据回填
        var inputwo = window.document.getElementById("uploadtwo");
        var canvastwo = window.document.getElementById("cvstwo");
        var retunpagedata = '';
        if (pagepostdata.payload.csId) {
            var inputdata = $("input[type=text]");
            retunpagedata = utils_admin.setajax('POST', pagepostdata, apidata.course.csrqueryById);
            console.log(retunpagedata);
            inputdata[0].value = retunpagedata.data.csName;
            $("textarea").val(retunpagedata.data.csInfo);
            inputdata[1].value = retunpagedata.data.csLecturer;
            inputdata[2].value = retunpagedata.data.csCopyrightStartdate;
            inputdata[3].value = retunpagedata.data.csCopyrightEnddate;
            pagepostdata.payload.csModel = retunpagedata.data.csModel;
            pagepostdata.payload.csHomeworkneed = retunpagedata.data.csHomeworkneed;
            pagepostdata.payload.ptId = retunpagedata.data.ptId;
            pagepostdata.payload.siteId = retunpagedata.data.siteId;
            utils_admin.returnimg(canvastwo, retunpagedata.data.csImgs);
        }
        //是否有作业
        window.utils_admin.loadhtml($(".choose"), '/dropdown.html', {
            "header": retunpagedata ? retunpagedata.data.csHomeworkneed == '1' ? "是" : "否" : "选择是否作业",
            "id": "null",
            "body": [
                {
                    "text": "是",
                    "id": "0"
                }, {
                    "text": "否",
                    "id": "1"
                }
            ],
            "width": 135,
            "name": "choose",
        });
        $(".choose").click(function (a) {
            let id = '';
            if (a.target.nodeName.toLowerCase() == "li") {
                id = a.target.getAttribute("id")
            } else {
                id = $(".choose")[0].id
            }
            pagepostdata.payload.csHomeworkScore = id;
        });

        //辅导老师
//        var newteach = utils_admin.setajax('POST', pagepostdata, apidata.course.newsCategoryqueryShowPage);
//        var newteacharr = [];
//        newteach.data.forEach((a) => {
//            a.text = a.catName;
//            a.id = a.catId;
//            newteacharr.push(a)
//        });
//        window.utils_admin.loadhtml($(".teach"), '/dropdown.html', {
//            "header": "选择老师",
//            "id": null,
//            "body": newteacharr,
//            "width": 135,
//            "name": "teach",
//        });
        $(".teach").click(function (a) {
            pagepostdata.payload.catId = utils_admin.downid(a, "teach");
        });

        //课程类型
        var retunpage = '';
        if (retunpagedata) {
            if (retunpagedata.data.csModel == '1') {
                retunpage = '公需课'
            } else if (retunpagedata.data.csModel == '2') {
                retunpage = '专业课'
            } else {
                retunpage = '开放课'
            }

        }
        window.utils_admin.loadhtml($(".option"), '/dropdown.html', {
            "header": retunpage ? retunpage : "选择课程类型",
            "id": "0",
            "body": [
                {
                    "text": "公需课",
                    "id": "1",
                },
                {
                    "text": "专业课",
                    "id": "2",
                },
                {
                    "text": "开放课",
                    "id": "3",
                }
            ],
            "width": 135,
            "name": "option",
        });
        $(".option").click(function (a) {
            pagepostdata.payload.csModel = utils_admin.downid(a, "option");
        });

        //资源分类
        var newscategoryone = utils_admin.setajax('POST', pagepostdata, apidata.resource.cqueryManagePage);

        window.utils_admin.loadhtml($(".sequence"), '/dropdown.html', {
            "header": "选择分类",
            "id": null,
            "body": utils_admin.loop(newscategoryone.data, "catId", "catName"),
            "width": 135,
            "name": "sequence",
        });
        window.utils_admin.loadhtml($(".newscategorychild"), '/dropdown.html', {
            "header": "先选择分类一",
            "id": null,
            "body": null,
            "width": 135,
            "name": "newscategorychild",
        });
        window.utils_admin.loadhtml($(".sequencechild"), '/dropdown.html', {
            "header": "先选择上一级",
            "id": null,
            "body": null,
            "width": 135,
            "name": "sequencechild",
        });
        $(".sequence").click(function (a) {
            let id = utils_admin.downid(a, "sequence");
            pagepostdata.payload.csCatstr = id;
            if (id) {
                let newscatechaild = utils_admin.setajax('POST', pagepostdata, apidata.resource.cqueryManagePage);
                window.utils_admin.loadhtml($(".newscategorychild"), '/dropdown.html', {
                    "header": "先选择分类一",
                    "id": null,
                    "body": newscatechaild.data ? utils_admin.loop(newscatechaild.data, "catId", "catName") : "",
                    "width": 135,
                    "name": "newscategorychild",
                });
            }
        });
        $(".newscategorychild").click(function (a) {
            let id = utils_admin.downid(a, "newscategorychild");
            pagepostdata.payload.csCatstr = id;
            if (id) {
                let newscatechaild = utils_admin.setajax('POST', pagepostdata, apidata.resource.cqueryManagePage);
                window.utils_admin.loadhtml($(".sequencechild"), '/dropdown.html', {
                    "header": "先选择上一级",
                    "id": null,
                    "body": newscatechaild.data ? utils_admin.loop(newscatechaild.data, "catId", "catName") : "",
                    "width": 135,
                    "name": "sequencechild",
                });
            }
        });
        $(".sequencechild").click(function (a) {
            if (pagepostdata.payload.csCatstr) {
                pagepostdata.payload.csCatstr = pagepostdata.payload.csCatstr + utils_admin.downid(a, "sequencechild");
            }
            pagepostdata.payload.csCatstr = utils_admin.downid(a, "sequencechild");
        });

        //站点,平台初始化
        window.utils_admin.loadhtml($(".parentsitelist"), '/dropdown.html', {
            "header": retunpagedata ? retunpagedata.data.ptName : "所有平台",
            "id": null,
            "body": window.parentSiteList,
            "width": 135,
            "name": "parentsitelist",
        });
        window.utils_admin.loadhtml($(".endchild"), '/dropdown.html', {
            "header": retunpagedata ? retunpagedata.data.siteName : "先选择平台",
            "id": null,
            "body": null,
            "width": 135,
            "name": "endchild",
        });
        //换站点
        $(".parentsitelist").click(function (a) {
            let id = '', endchild = [];
            if (a.target.nodeName.toLowerCase() == "li") {
                id = a.target.getAttribute("id")
            } else {
                id = window.parentSiteList[0].id
            }
            window.childSiteList.forEach((a) => {
                a.forEach((e, index) => {
                    if (e.ptId == id) {
                        endchild.push(e)
                        endchild[index].text = endchild[index].siteName;
                        endchild[index].id = endchild[index].siteId;
                    }
                })
            });
            window.utils_admin.loadhtml($(".endchild"), '/dropdown.html', {
                "header": endchild[0].text,
                "id": endchild[0].id,
                "body": endchild,
                "width": 120,
                "name": "endchild",
            });
        });
        $(".endchild").click(function (a) {
            pagepostdata.payload.siteId = utils_admin.downid(a, "endchild");
        });


        //上传图片

        window.utils_admin.setimg(inputwo, canvastwo, function (setdata) {
            pagepostdata.payload.photo = "1";
            //  pagepostdata.payload.csPhoto = setdata.data.fileId;
            pagepostdata.payload.csImgs = setdata.data.fileId;
            utils_admin.returnimg(canvastwo, setdata.data.fileUrl);

        });

        //保存
        function savemessageg() {
            let inputdata = $("input[type=text]");
            if (inputdata[0].value == '') {
                alert("必填项")
            } else {
                pagepostdata.payload.csName = inputdata[0].value;
                pagepostdata.payload.csInfo = $("textarea").val();
                pagepostdata.payload.csLecturer = inputdata[1].value;
                pagepostdata.payload.csCopyrightStartdate = inputdata[2].value;
                pagepostdata.payload.csCopyrightEnddate = inputdata[3].value;
                if (pagepostdata.payload.photo == 0) {
                    alert("文件或者图片正在上传")
                } else {
                    let setdata = utils_admin.setajax('POST', pagepostdata, apidata.course.csrsave);
                    pagepostdata.payload.actId = setdata.data.id;
                    alert("成功")
                }
            }
        }

        //保存并提交
        function addmessageg() {
            savemessageg();
            let getdata = utils_admin.setajax('POST', pagepostdata, apidata.course.csrsubmitCheck);
            if (getdata.success == "1") {
                window.location.href = "/admin/views/index.html#/course"
            }
        }

        window.addmessageg = addmessageg;
        window.savemessageg = savemessageg;
    })(window, window.$)

</script>