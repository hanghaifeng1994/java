<script type="text/html" id="resource_t">
    {{each data}}
    <tr class="{{$value.resId}}">
        <td><input class="fuxk" name="choose" type="checkbox" value="{{$value.resId}}"/>
        </td>
        <td class="text-center"> {{$value.resName}}</td>
        <td class="text-center">{{$value.resLabel}}</td>
        <td class="text-center">
            {{if $value.resPubStatus=='0'}}
            未发布
            {{else}}
            已发布
            {{/if}}
        </td>
        <td class="text-center">{{$value.fileType}}</td>
        <td class="text-center">{{$value.fileFormat}}</td>
        <td class="text-center" data-status="{{$value.resStatus}}">
            {{if $value.resStatus==0}}未提交
            {{else if $value.resStatus==1}}审核中
            {{else if $value.resStatus==2}}审核通过
            {{else if $value.resStatus==3}}审核失败
            {{else if $value.resStatus==4}}不需要审核
            {{/if}}
        </td>

        <td class="text-center caozuo">
            <a href="javascript:void(0);" data-id="{{$value.resId}}"
               onclick="pubStatus(this)">
                {{if $value.resPubStatus=="0"}}发布
                {{else}}取消发布
                {{/if}}</a>
            <a href="javascript:void(0);" data-id="{{$value.resId}}"
               onclick="check(this)">
                编辑
            </a>
            <a href="javascript:void(0);" data-id="{{$value.resId}}"
               onclick="forbidden(this)">删除</a>
        </td>
    </tr>
    {{/each}}
</script>


