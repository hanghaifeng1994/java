<script type="text/html" id="queryPage_t">
    {{each data}}
    <tr class="{{$value.catId}}">
        <td><input class="fuxk" name="choose" type="checkbox" value="{{$value.catId}}"/>
        </td>
        <!--改第一个tab表格抬头对应数据开始-->
        <td class="text-center"> {{$value.catName}}</td>
        <td class="text-center">{{$value.updateDate}}</td>
        <td class="text-center">{{$value.updateBy}}</td>
        <td class="text-center">{{$value.posid}}</td>
        <td class="text-center">{{$value.abmWeight}}</td>
        <td class="text-center" data-status="{{$value.abmStatus}}">
            {{if $value.abmStatus==0}}未提交
            {{else if $value.abmStatus==1}}审核中
            {{else if $value.abmStatus==2}}审核通过
            {{else if $value.abmStatus==3}}审核失败
            {{/if}}
        </td>
        <!--改第一个tab表格抬头对应数据结束-->
        <!--单行操作区-根据具体页面选择对应按钮修，不需要的注释-->
        <td class="text-center caozuo">
            <a href="javascript:void(0);" data-id="{{$value.articleId}}"
               onclick="pubStatus(this)">
                {{if $value.pubStatus=="0"}}发布
                {{else}}取消发布
                {{/if}}</a>
            <a href="javascript:void(0);" data-id="{{$value.articleId}}"
               onclick="posid(this)">
                {{if $value.posid=="1"}}置顶
                {{else}}取消置顶
                {{/if}}
            </a>
            <a href="javascript:void(0);" data-id="{{$value.articleId}}"
               onclick="weight(this)">
                {{if $value.weight!="999"}}推荐
                {{else}}取消推荐
                {{/if}}
            </a>
            <a href="javascript:void(0);" data-id="{{$value.articleId}}"
               onclick="onedel(this)">删除</a>
        </td>
    </tr>
    {{/each}}
</script>

