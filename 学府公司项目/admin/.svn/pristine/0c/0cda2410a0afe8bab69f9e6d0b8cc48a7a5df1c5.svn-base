<div class="card-body">
    <div class="tab-content">
        <div class="col-md-12 row" style="margin-left: 6px;margin-bottom: 10px">
            <div class="parentsitelist"></div>
            <div class="endchild" style="margin-left: 5px"></div>
        </div>
        <div class="col-md-12">
            <div class="card horizontal-form">
                <div class="card-body">
                    <div class="row col-md-12">
                        <div class="col-md-4 col-sm-6 row">
                            <label class="col-md-4 control-label">作品名称</label>
                            <div class="col-md-8 rylist">
                                <input type="text" placeholder="" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6 row">
                            <label class="col-md-4 control-label">所属活动</label>
                            <div class="col-md-8 rylist">
                                <input type="text" placeholder="" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6 row">
                            <label class="col-md-4 control-label">提交人</label>
                            <div class="col-md-8 rylist">
                                <input type="text" placeholder="" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row rylist">
                        <div class="col-md-4 col-sm6 row">
                            <label class="col-md-5 control-label"></label>
                            <div class="companynewscatetwo"></div>
                        </div>
                        <div class="col-md-4 col-sm6 row">
                            <label class="col-md-5 control-label"></label>
                            <button style="margin-top: 5px" class="btn btn-e btn-wd">搜索</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="padding-l-10 f-s-17 bod  box-s bod-r-8 padding-t-10">
                <button class="btn btn-e btn-wd">批量删除</button>
            </div>
        </div>
        <div class="container-fluid padding-t-20">
            <div class="row">
                <div class="col-md-12 ">
                    <table class="table table-bordered table-hover" id="tablecz">
                        <thead>
                        <tr>
                            <th><input class="fuxk" name="allcheck" type="checkbox" value="" id="allcheck"
                                       onclick="selectall(this)"/></th>
                            <th class="text-center cuti">作品编号</th>
                            <th class="text-center cuti">上传人</th>
                            <th class="text-center cuti">活动类型</th>
                            <th class="text-center cuti">上传时间</th>
                            <th class="text-center cuti">状态</th>
                            <th class="text-center cuti">操作</th>
                        </tr>
                        </thead>
                        <tbody id="interactproduct"></tbody>

                    </table>
                    <div class="fenye">
                        <div class="pagination pagination0"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/html" id="interactproduct_t">
    {{each data}}
    <tr class="{{$value.wksId}}">
        <td><input class="fuxk" name="choose" type="checkbox" value="{{$value.wksId}}"/>
        </td>
        <td class="text-center"> {{$value.actTitle}}</td>
        <td class="text-center"> {{$value.updateBy}}</td>
        <td class="text-center">
            {{if $value.actType=='1'}}宣传活动
            {{else}}评比类活动
            {{/if}}
        </td>
        <td class="text-center">
            {{$value.updateDate}}
        </td>
        <td class="text-center" data-status="{{$value.actStatus}}">
            {{if $value.actStatus==0}}未提交
            {{else if $value.actStatus==1}}审核中
            {{else if $value.actStatus==2}}审核通过
            {{else if $value.actStatus==3}}审核失败
            {{/if}}
        </td>

        <td class="text-center caozuo">
            <a href="javascript:void(0);" data-id="{{$value.wksId}}"
               onclick="posid(this)">
                专家打分
            </a>
            {{if $value.actStatus==1||$value.actStatus==3}}
            <a href="javascript:void(0);" data-id="{{$value.wksId}}"
               onclick="abmStatus(this)">审核</a>
            {{/if}}
            <a href="javascript:void(0);" data-id="{{$value.wksId}}"
               onclick="onedel(this)">删除</a>
        </td>
    </tr>
    {{/each}}
</script>


<script>
    (function (window, $) {
        var pagepostdata = utils_admin.clone(apidata.postdata);
        let pagedataone = utils_admin.setajax('POST', pagepostdata, apidata.activity.activitylist);
        utils_admin.queryPage("interactproduct", "interactproduct_t", pagedataone);
        //分页1
        new pagination({
            pagination: $('.pagination0'),//分页挂载的样式名称
            maxPage: 5, //最大页码数,支持奇数，左右对称
            startPage: 1,    //默认第一页
            currentPage: 1,          //当前页码
            totalPageCount: (pagedataone.totalCount / pagedataone.pageSize) - (pagedataone.totalCount / pagedataone.pageSize) % 1 + 1,  //总页数
            callback: function (pageNum) {
                pagepostdata.payload.page = "" + pageNum + "";
                utils_admin.queryPage("interactproduct", "interactproduct_t", utils_admin.setajax('POST', pagepostdata, apidata.activity.activitylist));
            }
        });
        //站点,平台初始化
        window.utils_admin.loadhtml($(".parentsitelist"), '/dropdown.html', {
            "header": "所有平台",
            "id": null,
            "body": window.parentSiteList,
            "width": 120,
            "name": "parentsitelist",
        });
        window.utils_admin.loadhtml($(".endchild"), '/dropdown.html', {
            "header": "先选择平台",
            "id": null,
            "body": null,
            "width": 120,
            "name": "endchild",
        });
        //换站点
        $(".parentsitelist").click(function (a) {
            let id = '', endchild = [];
            if (a.target.nodeName.toLowerCase() == "li") {
                id = a.target.getAttribute("id");
            }
            else {
                id = window.parentSiteList[0].id
            }
            window.childSiteList.forEach((a) => {
                a.forEach((e, index) => {
                    if (e.ptId == id) {
                        endchild.push(e)
                        endchild[index].text = endchild[index].siteName;
                        endchild[index].id = endchild[index].siteId;
                    }
                })
            });
            pagepostdata.payload.siteId = endchild[0].id;

            window.utils_admin.loadhtml($(".endchild"), '/dropdown.html', {
                "header": endchild[0].text,
                "id": endchild[0].id,
                "body": endchild,
                "width": 120,
                "name": "endchild",
            });
        });

        $(".endchild").click(function (a) {
            pagepostdata.payload.siteId = utils_admin.downid(a, "endchild");
        });


        //搜索
        function seek(e) {
            let inputdata = $("input[type=text]");
            pagepostdata.payload.loginName = inputdata[0].value;
            pagepostdata.payload.custName = inputdata[1].value;
            pagepostdata.payload.office = inputdata[2].value;
            utils_admin.queryPage("interactproduct", "interactproduct_t", utils_admin.setajax('POST', pagepostdata, apidata.activity.activitylist));
        }

        //全选
        function selectall(thit) {
            let checkboxs = document.getElementsByName("choose");
            if (thit.checked) {
                for (let i = 0; i < checkboxs.length; i++) {
                    let e = checkboxs[i];
                    e.checked = true;
                }
            } else {
                for (let i = 0; i < checkboxs.length; i++) {
                    let e = checkboxs[i];
                    e.checked = false;
                }
            }
        }

        //审核
        function abmStatus(e) {
            pagepostdata.payload.wksId = e.dataset.id;
            pagepostdata.payload.wksStatus = '2';
            utils_admin.setajax('POST', pagepostdata, apidata.activity.asumbitAudit);
            pagepostdata.payload.wksId = '';
            pagepostdata.payload.wksStatus = '';
            utils_admin.queryPage("interactproduct", "interactproduct_t", utils_admin.setajax('POST', pagepostdata, apidata.activity.activitylist));
        }

        //打分
        function posid(e) {
            pagepostdata.payload.wksId = e.dataset.id;
            $("#posid").toggle("hidden");
            let mark = utils_admin.setajax('POST', pagepostdata, apidata.activity.actmak).data[0];
            if (mark) {
                $("#posid input").val(mark.mkScore)
            } else {
                $("#posid input").val()
            }
        }

        $("#posid>.white_content").off('click').on('click', function (a) {
            if (a.target.nodeName.toLowerCase() == "button") {
                $("#posid").toggle("hidden")
            }
            if (a.target.dataset.id) {
                if ($("#posid input").val()) {
                    pagepostdata.payload.mkScore = $("#posid input").val();
                    utils_admin.setajax('POST', pagepostdata, apidata.activity.actMarking);
                    pagepostdata.payload.wksId = '';
                    pagepostdata.payload.mkScore = '';
                    utils_admin.queryPage("interactproduct", "interactproduct_t", utils_admin.setajax('POST', pagepostdata, apidata.activity.activitylist));
                }
            }
            a.stopPropagation();
        });

        ///删除
        function onedel(e) {
            pagepostdata.payload.wksId = e.dataset.id;
            $("#popups").toggle("hidden");
        }

        //批量删除
        function deleteclass(a) {
            $("#popups").toggle("hidden");
            pagepostdata.payload.custIds = choosevalue("interactproduct");
        }

        $("#popups>.white_content").off('click').on('click', function (a) {
            if (a.target.nodeName.toLowerCase() == "button") {
                $("#popups").toggle("hidden")
            }
            if (a.target.dataset.id) {
                utils_admin.setajax('POST', pagepostdata, apidata.base.freezeUser);
                utils_admin.queryPage("interactproduct", "interactproduct_t", utils_admin.setajax('POST', pagepostdata, apidata.activity.activitylist));
            }
            a.stopPropagation();
        });

        //禁用
        function forbidden(e) {
            var id = e.dataset.id;
            pagepostdata.payload.custIds = id;
            if ($.trim($(e).text()) == "启用") {
                utils_admin.setajax('POST', pagepostdata, apidata.base.enableUser);
            } else {
                utils_admin.setajax('POST', pagepostdata, apidata.base.freezeUser);
            }
            utils_admin.queryPage("interactproduct", "interactproduct_t", utils_admin.setajax('POST', pagepostdata, apidata.activity.activitylist))
        }

        window.onedel = onedel;
        window.abmStatus = abmStatus;
        window.deleteclass = deleteclass;
        window.forbidden = forbidden;
        window.selectall = selectall;
        window.seek = seek;
        window.posid = posid;
    })(window, window.$)

</script>