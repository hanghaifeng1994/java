<div id="addclass"></div>
<script type="text/html" id="addclass_t">
    <div class="col-md-12">
        <div class="horizontal-form">
            <div class="card-body">
                <div class="form-group col-xl-12 padding-t-10">
                    {{if data&&data.catId!=" "}}
                    <div class="row">
                        <label class="col-md-2 control-label brokeragetime">名称</label>
                        <div class="col-md-4 brokeragetime">
                           {{data.catName}}
                        </div>
                    </div>
                    {{/if}}
                    <br/>
                    <div class="row">
                        <label class="col-md-2 control-label brokeragetime">名称</label>
                        <div class="col-md-4">
                            <input type="text" placeholder="填写名称" class="form-control name">
                        </div>
                        <div class="col-md-1 text-danger">*</div>
                    </div>
                </div>
                <div class="form-group col-xl-12 padding-t-20 isView">
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                            <button type="submit" class="btn btn-fill  btn-e col-md-2" onclick="savemessageg()">保存</button>
                            <button type="submit" class="btn btn-fill  btn-e col-md-2" onclick="goback()">返回</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>


<script>
    (function (window, $) {
        var pagepostdata = utils_admin.clone(apidata.postdata);
        var classurl = JSON.parse(localStorage.getItem("ahll_class"));
        pagepostdata.payload.siteid=classurl.siteid;
        if(classurl.id){
            pagepostdata.payload.catId=classurl.id;
            utils_admin.queryPage("addclass", "addclass_t",utils_admin.setajax('POST', pagepostdata,classurl.paurl));
        }else {
            utils_admin.queryPage("addclass", "addclass_t");
        }

        pagepostdata.payload.parentId='';
        if(classurl.parentId!=" "&&classurl.parentId){
            pagepostdata.payload.parentId=classurl.parentId;
            pagepostdata.payload.catId="";
        }
        function savemessageg(e) {
            pagepostdata.payload.catName=$("input").val();
            utils_admin.setajax('POST', pagepostdata,classurl.url);
            goback()
        }
        function goback() {
            window.history.go(-1)
        }
        window.savemessageg=savemessageg;
        window.goback=goback
    })(window, window.$)
</script>